<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="38sp"
        android:textColor="#000"
        android:layout_marginLeft="3dp"
        android:text="UAV mang lựu đạn của IS bị bắn hạ "
        android:id="@+id/tvTitle"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMiniPic"
            android:layout_marginTop="5dp"
            android:layout_width="310dp"
            android:layout_height="210dp"
            android:src="@drawable/mini_image_png" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="12dp"
                android:textSize="30sp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Một chiếc UAV gắn lựu đạn của phiến quân Nhà nước Hồi giáo tự xưng (IS) đã bị quân đội Iraq bắn hạ gần Mosul."
                android:id="@+id/tvDescription" />

            <ImageView
                android:layout_marginTop="13dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_background_search"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end|bottom"
                android:src="@drawable/reorderhorizontal"
                android:id="@+id/btMore" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>