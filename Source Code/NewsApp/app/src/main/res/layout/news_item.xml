<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_marginLeft="3dp"
        android:text="UAV mang lựu đạn của IS bị bắn hạ "
        android:id="@+id/tvTitle"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMiniPic"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/mini_image_png" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="7dp"
                android:text="Một chiếc UAV gắn lựu đạn của phiến quân Nhà nước Hồi giáo tự xưng (IS) đã bị quân đội Iraq bắn hạ gần Mosul."
                android:textColor="#000" />

            <ImageView
                android:id="@+id/btMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:layout_marginRight="3dp"
                android:background="@drawable/selector_background_search"
                android:src="@drawable/reorderhorizontal" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>